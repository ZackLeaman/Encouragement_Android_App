<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants"
                android:orientation="horizontal"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_textview"
        android:layout_toLeftOf="@+id/list_item_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="16dp"
        android:textColor="#ffffff"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="20dp">
    </TextView>

    <TextView
        android:id="@+id/list_item_textview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/list_item_textview"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:alpha="0.75"
        android:layout_toLeftOf="@+id/list_item_btn"
        android:layout_toStartOf="@+id/list_item_btn"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="30dp">
    </TextView>

    <Button
        android:id="@+id/list_item_btn"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:drawableBottom="@android:drawable/ic_menu_more"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:paddingBottom="10dp"
        android:layout_marginTop="5dp"
        style="?android:attr/borderlessButtonStyle"
        />

</RelativeLayout>
